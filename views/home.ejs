<%- include('./base/header.ejs') %>
    <div class="container">
        <div class="alert bg-success my-3">
            <h4 class="text-center" style="color: lavenderblush;">Add new student</h4>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col"></div>
            <div class="col">
                <form action="/add/student" method="post">
                    <div class="form-group">
                        <label for="name" class="form-label">First Name:</label>
                        <input type="text" class="form-control" id="rollno" name="firstName">
                    </div>
                    <div class="form-group">
                        <label for="name" class="form-label">Last Name:</label>
                        <input type="text" class="form-control" id="rollno" name="lastName">
                    </div>
                    <div class="form-group">
                        <label for="name" class="form-label">Roll No:</label>
                        <input type="text" class="form-control" id="rollno" name="rollNo">
                    </div>
                    <div class="form-group">
                        <div class="form-group"></div>
                        <label for="name" class="form-label">Father Name:</label>
                        <input type="text" class="form-control" id="rollno" name="fatherName">
                    </div>
                    <div>
                        <label for="name" class="form-label">Aadharcard No:</label>
                        <input type="text" class="form-control" id="rollno" name="aadharCardNo">
                    </div>
                    <div class="form-group">
                        <label for="name" class="form-label">Mobile No:</label>
                        <input type="text" class="form-control" id="rollno" name="mobileNo">
                    </div>
                    <input type="submit" value="Add student" class="btn btn-warning my-3 w-100">
                </form>
            </div>
            <div class="col"></div>
        </div>
    </div>
    <%- include('./base/footer.ejs') %>